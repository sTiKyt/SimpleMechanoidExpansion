<?xml version="1.0" encoding="utf-8" ?>

<Defs>

    <ThingDef ParentName="BaseHumanMakeableGun">

        <defName>SME_ScrapMechRifle</defName>
        <label>scrap mechanoid rifle</label>
        <description>WIP to be added, this is short to mid range weapon.</description>
        <techLevel>Spacer</techLevel>
        <graphicData>
            <texPath>Things/Item/Equipment/WeaponRanged/ScrapMechRifle</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <soundInteract>SME_Interact_ScrapMechRifle</soundInteract>
        <statBases>
            <WorkToMake>45000</WorkToMake>
            <Mass>3.9</Mass>
            <AccuracyTouch>0.45</AccuracyTouch>
            <AccuracyShort>0.60</AccuracyShort>
            <AccuracyMedium>0.65</AccuracyMedium>
            <AccuracyLong>0.35</AccuracyLong>
            <RangedWeapon_Cooldown>2.2</RangedWeapon_Cooldown>
        </statBases>
        <recipeMaker>
            <researchPrerequisite>ChargedShot</researchPrerequisite>            <!-- TODO Replace with something like "Scrap mechanoid weaponry" or "Simple/(Basics of) mechanoid anatomy" -->
            <skillRequirements>
                <Crafting>6</Crafting>
            </skillRequirements>
            <recipeUsers Inherit="False">
                <li>FabricationBench</li>                <!-- TODO Replace with something like "Scrap mechanoid bench"-->
            </recipeUsers>
        </recipeMaker>
        <costList> <!-- TODO add chemcrystals, balance cost -->
            <Plasteel>50</Plasteel>
            <ComponentSpacer>2</ComponentSpacer>
        </costList> <!-- END OF TODO -->
        <thingSetMakerTags> <!-- TODO figure out what those are -->
            <li>RewardStandardLowFreq</li>
            <li>RewardStandardQualitySuper</li>
        </thingSetMakerTags> <!-- END OF TODO -->
        <weaponTags>
            <li>SpacerGun</li>
        </weaponTags>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>SME_Bullet_ScrapMechRifle</defaultProjectile>
                <warmupTime>1.0</warmupTime> <!-- TODO balance those-->>
                <range>25.9</range>
                <ticksBetweenBurstShots>12</ticksBetweenBurstShots>
                <burstShotCount>3</burstShotCount>
                <soundCast>Shot_ChargeRifle</soundCast>
                <soundCastTail>GunTail_Medium</soundCastTail>
                <muzzleFlashScale>9</muzzleFlashScale> <!-- END OF TODO -->
            </li>
        </verbs>
        <tools> <!-- TODO add cut damage, replace and balance those -->
            <li>
                <label>stock</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
            <li>
                <label>barrel</label>
                <capacities>
                    <li>Blunt</li>
                    <li>Poke</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
        </tools> <!-- END OF TODO -->
    </ThingDef>
    <ThingDef ParentName="BaseBullet">
        <defName>SME_Bullet_ScrapMechRifle</defName>
        <label>charge shot</label> <!-- TODO rename this-->
        <graphicData>
            <texPath>Things/Projectile/Charge_Small</texPath> <!-- TODO replace this-->>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <projectile> <!-- TOOD Balance this -->
            <damageDef>Bullet</damageDef>
            <damageAmountBase>15</damageAmountBase>
            <armorPenetrationBase>0.35</armorPenetrationBase>
            <speed>70</speed> 
        </projectile> <!-- END OF TODO -->
    </ThingDef>

</Defs>